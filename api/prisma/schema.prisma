generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  avatar   String?
  phone    String?
  createAt DateTime  @default(now())
  updateAt DateTime  @updatedAt
  places   Place[]
  bookings Booking[]
}

model Place {
  id          Int          @id @default(autoincrement())
  owner       User         @relation(fields: [ownerId], references: [id])
  ownerId     Int
  title       String
  address     String
  area        Int // diện tích
  photos      PlacePhoto[]
  description String
  perks       PlacePerk[]
  extraInfo   String
  duration    Int // thời hạn hợp đồng
  price       Int
  bookings    Booking[]
}

model PlacePhoto {
  id      Int    @id @default(autoincrement())
  url     String
  place   Place  @relation(fields: [placeId], references: [id])
  placeId Int
}

model PlacePerk {
  id      String @id @default(uuid())
  perk    String
  place   Place  @relation(fields: [placeId], references: [id])
  placeId Int
}

model Booking {
  id         Int           @id @default(autoincrement())
  place      Place         @relation(fields: [placeId], references: [id])
  placeId    Int
  renter     User          @relation(fields: [renterId], references: [id])
  renterId   Int
  checkOut   DateTime?
  status     BookingStatus @default(PENDING)
  isContinue Boolean       @default(false)
  invoices   Invoice[]
  createAt   DateTime      @default(now())
  updateAt   DateTime      @updatedAt
}

enum BookingStatus {
  PENDING
  APPROVED
  WAIT
  RENTED
}

model Invoice {
  id          Int            @id @default(autoincrement())
  booking     Booking        @relation(fields: [bookingId], references: [id])
  bookingId   Int
  title       String
  description String?
  photos      InvoicePhoto[]
  createdAt   DateTime       @default(now())
  updateAt    DateTime       @updatedAt
}

model InvoicePhoto {
  id        Int     @id @default(autoincrement())
  url       String
  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  invoiceId Int
}
